<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SourceFilter"
    android:background="@android:color/white">

    <Button
        android:id="@+id/btnHabrFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habr"
        android:textColor="@color/black"
        android:backgroundTint="@color/habr"
        app:layout_constraintEnd_toStartOf="@+id/btnTechFilter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTechFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TechCruncher"
        android:backgroundTint="@color/techcrunch"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnHabrFilter"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>